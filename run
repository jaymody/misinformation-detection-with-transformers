#!/bin/bash

DATA_PATH='/usr/local/dataset/metadata.json'
ARTICLES_DIR='/usr/local/dataset/articles'
PREDICTIONS_FPATH='/usr/local/predictions.txt'
MODEL_DIR='models/xlnet/'
WORD2VEC_PATH='models/GoogleNews-vectors-negative300.bin'
PARAMS_PATH='models/params.json'
DIR='/usr/src'

python ${DIR}/valerie/main.py \
    --data_path ${DATA_PATH} \
    --articles_dir ${ARTICLES_DIR} \
    --predictions_fpath ${PREDICTIONS_FPATH}\
    --model_dir ${DIR}/${MODEL_DIR} \
    --word2vec_path ${DIR}/${WORD2VEC_PATH} \
    --params_fpath ${DIR}/${PARAMS_PATH} \
    --keep_n 5 \
    --nproc 4 \
    --ngpu 1
